    section(style="background:#fafafa;padding:60px 0px;")
        for ico in icos
            div.row.icoList(style="width: 80%; margin-left: auto; margin-right: auto;")
              .col-sm-4
                  .row(style="height: 100%;")
                    .col-sm-4
                      div.verticalAlign(style="text-align: center;")
                          img(src='/img/sampleICO.png' style='width: 100%;')
                          p #{ico.businessName}
                    .col-sm-8
                      div.verticalAlign#chartContainer(style="height: 90px; max-width: 100%; margin: 0px auto;")
              .col-sm-6
                  .row(style="height: 100%;")
                    .col-sm
                      div.verticalAlign
                        p(style='font-size: 0.8em; width: 90%;') #{ico.startDate}
                            span(style="float: right;")
                                | #{ico.endDate}
                        .progress(style="width: 90%; border-radius: 50px;")
                            .progress-bar.bg-success(role='progressbar', style='width: 25%; border-radius: 50px;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
                        p(style="line-height: 2; font-size: 0.8em; text-align: center; color: #737272;") 25% complete

                    .col-sm
                      div.verticalAlign.borderRight
                        p(style='font-size: 0.8em; line-height: 2;') #{ico.tokens}
                        div(style="width: 90%; position: relative;")
                            .progress(style="border-radius: 50px;")
                                .progress-bar.bg-success(role='progressbar', style='width: 25%; border-radius: 50px;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
                        p(style="line-height: 2; font-size: 0.8em; text-align: center; color: #737272;") 35% cup complete
                        p(style=' position: absolute; left: 60%; top: 7px; font-size: 0.8em; color: green; line-height: 1; padding-left: 5px;')
                          span(style=' position: absolute; border-right: solid #00a232 1px; margin-top: 0px; line-height: 28; font-size: 0.1em; left: 0px;') .
                          | cap

              .col-sm-2
                div.verticalAlign
                    p(style='font-size: 0.8em;') Status: Ongoing
                    p(style='font-size: 0.8em;') Growth: 40%
                    p(style='font-size: 0.8em;') Community: 20,000
